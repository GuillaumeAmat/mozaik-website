global-reset()

@import url('https://fonts.googleapis.com/css?family=Open+Sans:300,400,700')

html
  box-sizing: border-box

*, *:before, *:after
  box-sizing: inherit

button
input[type="reset"]
input[type="button"]
input[type="submit"]
  &::-moz-focus-inner
    padding: 0
    margin: 0
    border: 0

input, button, select
  margin: 0
  padding: 0
  border: 0

html, body
  @media screen
    height: 100%
    overflow: hidden

body
  background-color #13aae3
  background-image url("/images/mozaik-pattern.png")
  background-size 255px 128px
  font-size: font-size
  font-family: font-sans
  line-height line-height
  color: color-default
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  position: relative
  padding-top header-height

a
  color color-link
  text-decoration none

em
  font-style italic

code
  font-family font-mono
  word-wrap normal
  background #ddd
  padding 3px 6px
  font-size 90%
  border-radius 2px
  color #000

pre code
  padding 0
  background transparent
  border-radius 0
  font-size inherit

.strata_out
  clearfix()
  width 100%

.strata
  clearfix()
  max-width max-width
  margin 0 auto

.strata_in
  clearfix()
  @media screen
    margin 0 gutter-width

.stuck
  position fixed
  top header-height
  float none !important

.sub-header
  padding          50px 0
  //background-color #13aae3
  color            #fff
  box-shadow       0 -1px 1px rgba(0, 0, 0, 0.2) inset

.page-title
  font-family font-title
  font-weight 400
  font-size 28px
  text-shadow 0 1px 1px rgba(0, 0, 0, 0.35)

.page-baseline
  margin-top 10px
  color #012939

.page_content
  background #f5f5f5

  > .strata
    position relative
