.extensions
  margin 30px 0
  display flex
  flex-flow row wrap
  flex-direction row
  flex-wrap wrap
  justify-content space-between

  @media mq-mobile
    justify-content space-around

  &_intro
    margin 30px 0 0 0
    text-align left
    font-weight 700
    padding-left 20px
    border-left 3px solid #71cff2

.extension
  background #fff
  box-shadow 0 1px 1px rgba(0, 0, 0, 0.25)
  margin-bottom 20px
  border-radius 2px

  flex-grow   0
  flex-shrink 0

  @media mq-mobile
    flex-basis 100%

  @media mq-tablet
    flex-basis 100%

  @media mq-normal
    flex-basis 49%

  &__header
    background: #fafafa
    display: flex
    padding: 13px 20px
    align-items: center
    justify-content: space-between
    border-radius: 2px 2px 0 0

  &__link
    color: #444
    font-size: 18px
    text-decoration: none
    font-family: font-title
    font-weight: 700
    flex-grow: 1

    &:hover
      color #000

  &__demo
    display: block
    background-color: color-link
    color: white
    line-height: 1em
    padding: 4px 7px
    font-size: 0.75rem
    font-weight: 700
    margin-left: 7px

  &__npm
    display: inline-block
    img
      display: block

  &__desc
    line-height line-height
    padding 12px 20px

  &__footer
    display: flex
    justify-content: space-between
    align-items: center
    padding: 5px 20px 7px 20px
    border-top: 1px solid #eee
    font-size: 0.9em

  &__tags
    display: flex
    align-items: center

  &__tag
    color: #999
    text-decoration: none
    display: block
    margin-right: 10px
    &:hover
      color: #555
    &:before
      content: "#"

  &__compat
    display: flex

    &__item
      font-weight: 700
      margin-left: 7px