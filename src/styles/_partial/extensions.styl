.extensions
  margin 30px 0
  display flex
  flex-flow row wrap
  flex-direction row
  flex-wrap wrap
  justify-content space-between

  @media mq-mobile
    justify-content space-around

  &_intro
    margin 30px 0 0 0
    text-align left
    font-weight 700
    padding-left 20px
    border-left 3px solid #71cff2

.extension
  background #fff
  box-shadow 0 1px 1px rgba(0, 0, 0, 0.25)
  margin-bottom 20px
  border-radius 2px

  flex-grow   0
  flex-shrink 0

  @media mq-mobile
    flex-basis 100%

  @media mq-tablet
    flex-basis 100%

  @media mq-normal
    flex-basis 49%

  &__name
    font-family font-title
    position relative
    font-weight bold
    color #333
    background #fafafa
    font-size 18px
    text-decoration none
    line-height 1
    padding 13px 20px
    display block
    border-radius 2px 2px 0 0

    img
      position absolute
      top   13px
      right 20px

  &__link
    color #444
    line-height 1em
    text-decoration none

    &:hover
      color #000

  &__desc
    line-height line-height
    padding 12px 20px

  &__footer
    display: flex
    justify-content: space-between
    align-items: center
    padding: 5px 20px 7px 20px
    border-top: 1px solid #eee
    font-size: 0.9em

  &__tags
    display: flex
    align-items: center

  &__tag
    color: #999
    text-decoration: none
    display: block
    margin-right: 10px
    &:hover
      color: #555
    &:before
      content: "#"

  &__demo
    display: block
    background-color: color-link
    color: white
    line-height: 1em
    padding: 5px 7px
    border-radius: 1px
    font-size: 0.75rem
    font-weight: 700