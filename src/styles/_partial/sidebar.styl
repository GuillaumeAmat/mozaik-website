.sidebar
  width sidebar-width
  float right
  padding 30px 0
  display none
  background #f5f5f5

  @media mq-normal
    display block

  &__title
    margin: 0 0 10px 0
    padding-bottom: 10px
    font-family: font-title
    font-weight: 700
    display: block
    border-bottom: 1px solid color-border
    line-height: 1

  &__link
    font-family font-title
    display block
    color color-default
    text-decoration none
    padding 7px 0
    line-height 1
    position relative
    width 100%
    text-overflow ellipsis
    overflow hidden
    white-space nowrap
    &._is-current
      color color-link
    &:hover
      color color-link-hover
