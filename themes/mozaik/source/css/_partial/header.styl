header-padding-normal = 10px
header-padding-max    = 30px

#header
  position fixed
  z-index 200
  top   0
  right 0
  left  0
  background #a2e7da
  //box-shadow 0 1px 1px rgba(0, 0, 0, 0.15)
  height header-height
  @media print
    display none
  .home &
    padding header-padding-max 0

#header-inner
  position relative

#logo-wrap
  text-align: center

#logo
  hide-text()
  background url("/mozaik/mozaik-logo.png")
  background-repeat no-repeat
  background-position 0 10px
  background-size contain
  width  logo-width
  height header-height
  display inline-block
  @media mq-normal
    float left

.main-nav
  display none
  float right

  @media mq-normal
    display block

.main-nav_item
  display inline-block
  position relative

  &-demo
    margin-left 10px
    padding 10px 0 0 0

.main-nav_link
  color #333
  text-decoration none
  transition color 0.2s
  font-family font-title
  font-size   14px
  font-weight 700
  text-transform uppercase
  display inline-block
  padding 0 15px
  line-height header-height

  &:hover
    color #000

  &._is-active
    background #333
    color color-mint
    //box-shadow 0 3px 2px #000 inset

  &-demo
    line-height (header-height - 20px)
    background #333
    color color-mint
    border-radius 2px

#search-btn-wrap
  display: none
  float: right
  margin-right: 15px
  @media mq-normal
    display: block

#search-btn
  cursor: pointer

#lang-select-wrap
  display: none
  position: relative
  float: right
  @media mq-normal
    display: block

#lang-select-label
  color: #fff
  opacity: 0.7
  font-family: font-title
  line-height: logo-size
  span
    padding-left: 8px
  i
    opacity: 0.7

#lang-select
  opacity: 0
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  -webkit-appearance: menulist-button
  font-size: inherit
