header-padding-normal = 10px
header-padding-max    = 30px

.header
  position fixed
  z-index 200
  top   0
  right 0
  left  0
  background #13aae3
  color      #fff
  height header-height
  //transition 200ms

  @media print
    display none

  .home &
    padding header-padding-max 0

  &_compact
    background #fff
    color      #777
    box-shadow 0 1px 1px rgba(0, 0, 0, 0.2)

    .header_logo
      background-image url("/mozaik/mozaik-logo.png")

    .main-nav_link._is-active
      color #000

  &_logo
    hide-text()
    background-image url("/mozaik/mozaik-logo-white.png")
    background-repeat no-repeat
    background-position 0 10px
    background-size contain
    width  logo-width
    height header-height
    display inline-block
    @media mq-normal
      float left

#logo-wrap
  text-align: center

.main-nav
  display none
  float right

  @media mq-normal
    display block

.main-nav_item
  display inline-block
  position relative

  &-demo
    margin-left 10px
    padding 10px 0 0 0

.main-nav_link
  color inherit
  text-decoration none
  font-family font-title
  font-size   14px
  font-weight 700
  text-transform uppercase
  display inline-block
  padding 0 15px
  line-height header-height
  transition all 200ms

  &:hover
    color color-link

  &._is-active
    color #fff

  &-demo
    line-height (header-height - 20px)
    background color-link
    color #fff
    border-radius 2px

    &:hover
      background #fff
      color color-link
