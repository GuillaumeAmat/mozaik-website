.index_banner
  background-color #13aae3
  text-align center
  padding 50px 0 65px 0
  color #fff

  &_intro
    margin-bottom 30px
    font-size 18px
    font-weight 600
    text-shadow 0 1px 1px rgba(0, 0, 0, 0.35)

  &_link
    font-family font-title
    display inline-block
    //background #fff
    color      #fff
    font-size 15px
    text-decoration none
    margin 0
    border 2px solid #fff
    padding 12px 16px
    transition 0.2s
    text-align center
    font-weight 700
    text-transform uppercase
    //border-radius 3px
    //box-shadow 0 1px 1px rgba(0, 0, 0, 0.35)

    &:hover
      background #fff
      color      #13aae3

    @media mq-mobile
      width 100%
      &:first-child
        margin-bottom 20px

    @media mq-tablet
      width 47%
      &:first-child
        margin-right 4%

    @media mq-normal
      width 18%
      &:first-child
        margin-right 2%

.banner-share
  background #fff
  display none
  text-align center
  border-bottom 1px solid #ddd

  &_wrapper
    max-width max-width
    margin 0 auto
    padding 12px 0
    height 44px

  @media mq-normal
    display block
