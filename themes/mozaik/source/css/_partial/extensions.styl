.extensions
  margin 40px -20px
  display flex
  flex-flow row wrap
  flex-direction row
  flex-wrap wrap
  justify-content space-between

.extension
  background #333
  color #ddd
  box-shadow 0 1px 1px rgba(0, 0, 0, 0.35)
  margin-bottom 20px
  border-radius 2px

  @media mq-mobile
    flex-grow   0
    flex-shrink 0
    flex-basis  94%

  @media mq-tablet
    flex-grow   0
    flex-shrink 0
    flex-basis  94%

  @media mq-normal
    flex-grow   0
    flex-shrink 0
    flex-basis  49%

  &_name
    font-family font-title
    font-weight bold
    color #333
    background color-mint
    font-size 18px
    text-decoration none
    line-height 1
    padding 13px 20px
    display block
    &:hover
      background lighten(color-mint, 5)
      color #000

  &_desc
    line-height line-height
    padding 12px 20px

  &_tags
    clearfix()
    border-top 1px solid #222
    line-height 1em
    padding 7px 20px

  &_tag
    color color-mint
    font-size 0.9em
    text-decoration none
    display inline-block
    margin-right 10px
    &:hover
      color #fff
    &:before
      content "#"
