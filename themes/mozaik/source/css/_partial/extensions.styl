.extensions
  margin 30px -20px
  display flex
  flex-flow row wrap
  flex-direction row
  flex-wrap wrap
  justify-content space-between

  @media mq-mobile
    justify-content space-around

  &_intro
    margin 30px -20px 0 -20px
    text-align left
    font-weight 700
    padding-left 20px
    border-left 3px solid #71cff2

.extension
  background #fff
  box-shadow 0 1px 1px rgba(0, 0, 0, 0.25)
  margin-bottom 20px
  border-radius 2px

  @media mq-mobile
    flex-grow   0
    flex-shrink 0
    flex-basis  94%

  @media mq-tablet
    flex-grow   0
    flex-shrink 0
    flex-basis  94%

  @media mq-normal
    flex-grow   0
    flex-shrink 0
    flex-basis  49%

  &_name
    font-family font-title
    position relative
    font-weight bold
    color #333
    background #fafafa
    font-size 18px
    text-decoration none
    line-height 1
    padding 13px 20px
    display block
    border-radius 2px 2px 0 0

    img
      position absolute
      top   13px
      right 20px

  &_link
    color #444
    line-height 1em
    text-decoration none

    &:hover
      color #000

  &_desc
    line-height line-height
    padding 12px 20px

  &_tags
    clearfix()
    border-top 1px solid #eee
    line-height 1em
    padding 7px 20px 10px 20px

  &_tag
    color #999
    font-size 0.9em
    text-decoration none
    display inline-block
    margin-right 10px
    &:hover
      color #555
    &:before
      content "#"
