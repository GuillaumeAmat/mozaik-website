.use-cases
  background #f5f5f5
  padding-bottom 30px

  &_title
    font-family font-title
    font-weight 700
    font-size 22px
    margin 30px 0 0 0
    padding-bottom 15px
    text-transform uppercase
    border-bottom 1px solid color-border

    @media mq-mobile
      text-align center

  &_item
    display block
    padding 10px 0
    color color-default
    border-bottom 1px solid #dedede

    .fa
      font-size 12px
      margin-left  5px
      margin-right 10px
      color color-link

    &:last-child
      border-bottom 0




