.features
  margin 0 -20px 30px -20px
  display flex
  flex-flow row wrap
  flex-direction row
  flex-wrap wrap
  justify-content space-between

  &_title
    font-family font-title
    font-weight 700
    font-size 24px
    margin 30px -20px 20px -20px
    text-transform uppercase

.feature
  background #333
  color #ddd
  box-shadow 0 1px 1px rgba(0, 0, 0, 0.35)
  margin-bottom 20px
  border-radius 2px

  @media mq-mobile
    flex-grow   0
    flex-shrink 0
    flex-basis  94%

  @media mq-tablet
    flex-grow   0
    flex-shrink 0
    flex-basis  94%

  @media mq-normal
    flex-grow   0
    flex-shrink 0
    flex-basis  49%

  &_title
    font-family font-title
    font-weight bold
    color #333
    background color-mint
    font-size 18px
    text-decoration none
    line-height 1
    padding 13px 20px
    display block
    position relative

    .fa
      position absolute
      top   12px
      right 12px
      margin-right 7px

  &_more
    display inline-block
    border 2px solid color-mint
    line-height 1em
    padding 3px 7px
    font-size 13px
    font-weight 700
    color color-mint
    text-decoration none

    &:hover
      background-color darken(color-mint, 10)
      border-color     darken(color-mint, 10)
      color #333

  &_desc
    padding 10px 15px 15px 15px

    strong
      font-weight 700
      color color-mint
