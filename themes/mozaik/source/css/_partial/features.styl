.features
  margin 0 -20px 30px -20px
  display flex
  flex-flow row wrap
  flex-direction row
  flex-wrap wrap
  justify-content space-between

  @media mq-mobile
    justify-content space-around

  &_title
    font-family font-title
    font-weight 700
    font-size 24px
    margin 30px -20px 20px -20px
    text-transform uppercase

.feature
  background #fff
  overflow hidden
  box-shadow 0 1px 1px rgba(0, 0, 0, 0.25)
  margin-bottom 20px
  border-radius 2px

  @media mq-mobile
    flex-grow   0
    flex-shrink 0
    flex-basis  94%

  @media mq-tablet
    flex-grow   0
    flex-shrink 0
    flex-basis  94%

  @media mq-normal
    flex-grow   0
    flex-shrink 0
    flex-basis  49%

  &_title
    font-family font-title
    font-weight bold
    color #333
    background #fafafa
    font-size 18px
    text-decoration none
    line-height 1
    padding 13px 20px
    display block
    position relative
    border-radius 2px 2px 0 0

    .fa
      position absolute
      top   12px
      right 12px
      margin-right 7px
      color #08aeec

  &_more
    display inline-block
    border 2px solid color-link
    line-height 1em
    padding 3px 7px
    font-size 13px
    font-weight 700
    color color-link
    text-decoration none

    &:hover
      background-color color-link
      color #fff

  &_desc
    padding 10px 15px 15px 15px
    line-height 1.8em

    strong
      font-weight 700
      color color-link
