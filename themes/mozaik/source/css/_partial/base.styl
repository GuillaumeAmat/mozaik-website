global-reset()

html
  box-sizing: border-box

*, *:before, *:after
  box-sizing: inherit

button
input[type="reset"]
input[type="button"]
input[type="submit"]
  &::-moz-focus-inner
    padding: 0
    margin: 0
    border: 0

input, button, select
  margin: 0
  padding: 0
  border: 0

html, body
  @media screen
    height: 100%
    overflow: hidden

body
  background-color #13aae3
  font-size: font-size
  font-family: font-sans
  line-height line-height
  color: color-default
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  position: relative
  padding-top header-height

.wrapper
  clearfix()
  @media screen
    max-width max-width
    margin 0 auto

.inner
  clearfix()
  @media screen
    padding: 0 gutter-width

.sub-header
  padding          30px 0
  background-color #13aae3
  color            #fff
  box-shadow       0 -1px 1px rgba(0, 0, 0, 0.2) inset

.page-title
  font-family font-title
  font-weight 400
  font-size 28px

.page-baseline
  margin-top 10px
  color #026286


#content-wrap
  background: #f5f5f5
