global-reset()

html
  box-sizing: border-box

*, *:before, *:after
  box-sizing: inherit

button
input[type="reset"]
input[type="button"]
input[type="submit"]
  &::-moz-focus-inner
    padding: 0
    margin: 0
    border: 0

input, button, select
  margin: 0
  padding: 0
  border: 0

html, body
  @media screen
    height: 100%
    overflow: hidden

body
  background-color #333
  font-size: font-size
  font-family: font-sans
  line-height line-height
  color: color-default
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  position: relative
  padding-top header-height

.wrapper
  clearfix()
  @media screen
    max-width: max-width
    margin: 0 auto

.inner
  clearfix()
  @media screen
    padding: 0 gutter-width

.sub-header
  padding          30px 0
  background-color #333
  color            #a2e7da

.page-title
  font-family font-title
  font-weight 400
  font-size 28px

.page-baseline
  margin-top 10px
  color #aaa


#content-wrap
  background: #eee
  border-top: 1px solid darken(color-navy, 5%)
  border-bottom: 1px solid darken(color-navy, 5%)
  margin: -1px 0
